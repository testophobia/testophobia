{
  "name": "Testophobia Recorder",
  "version": "1.0",
  "description": "Chrome extension for recording Testophobia scripts",
  "manifest_version": 2,
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/testophobia16.png",
      "32": "images/testophobia32.png",
      "48": "images/testophobia48.png",
      "128": "images/testophobia128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "images/testophobia16.png",
    "32": "images/testophobia32.png",
    "48": "images/testophobia48.png",
    "128": "images/testophobia128.png"
  },
  "content_scripts": [
   {
     "matches": ["*://*/*"],
     "js": ["content-script.js"]
   }
  ]
}