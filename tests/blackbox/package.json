{
  "type": "module",
  "scripts": {
    "test": "ava -v 2> /dev/null",
    "serve:site": "cd ./files/site && http-server -p 8081",
    "serve:coverage": "cd coverage && http-server -p 8080"
  },
  "ava": {
    "files": [
      "blackbox.test.js"
    ],
    "timeout": "30s"
  },
  "nyc": {
    "all": true,
    "reporter": "html",
    "cwd": "../../",
    "report-dir": "tests/blackbox/coverage",
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "tests/**/*.js"
    ]
  },
  "dependencies": {
    "ava": "^4.0.0-alpha.2",
    "nyc": "^15.1.0",
    "strip-ansi": "^7.0.0"
  },
  "devDependencies": {
    "proxyquire": "^2.1.3",
    "sinon": "^10.0.0"
  },
  "resolutions": {
    "minimist": "^1.2.3",
    "yargs-parser": "^18.1.3"
  }
}
